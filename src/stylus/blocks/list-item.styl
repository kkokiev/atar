.list-item
	position relative
	padding-top 22px
	padding-bottom 30px
	padding-left 30px
	padding-right 215px
	border-top 1px solid brandLight
	
	+below(large)
		padding-left 10px
		padding-right 175px
		
	+below(600px)
		padding 0 10px 15px
	
	&__label
		position absolute
		top -6px
		right 40px
		display block
		width 145px
		padding 23px 5px 7px
		font-family font-2
		font-size 3rem
		text-align center
		background brandLight
		border-bottom-left-radius 5px
		border-bottom-right-radius 5px
		box-shadow 3px 2px 2px 0px rgba(0,0,0, .35)
		
		+below(large)
			right 10px
			padding 15px 5px 10px
			font-size 2rem
			
		+below(600px)
			position static
			margin-top -5px
			margin-bottom 10px
		
		&:after
			position absolute
			top 0
			right -5px
			content ''
			display block
			width 0
			height 0
			border-style solid
			border-width 5px 0 0 5px
			border-color transparent transparent transparent brandDark
			
			+below(600px)
				top -5px
				right 5px
		
		span
			display inline-block
			vertical-align top
			max-width 100%
			color brand
			single-line()
			
	> h3
		margin-bottom .6em
		color brandLight
		font-size 1.6rem
		line-height 1.2em
		
		strong,
		b
			font-size 2rem
			font-family font-3
			
	> p
		margin-bottom .5em
		color #656363
		font-size 1.5rem
		
		&:last-child
			margin-bottom 0
		
.list-item_alt
	border-top 1px solid #40ae49
	
	> .list-item__label
		background #40ae49
		
	> h3
		color #40ae49