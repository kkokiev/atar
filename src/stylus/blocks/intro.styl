.intro
	position relative
	height 100vh
	color light
	background-color #267ada
	background-position center 0
	background-size cover
	background-repeat no-repeat
	
	&__title
		overflow hidden
		position absolute
		top 0
		left 0
		right 0
		bottom 0
		height auto
		width 100%
		padding 5vh
		margin auto
		
		+above(tablet)
			height 51vh
			width 51vh
			background transparent url(images/intro-bg-round.png) center center no-repeat
			background-size cover
			border-radius 50%
		
	&__title-inner-wrap
		display table
		height 100%
		width 100%
		
	&__title-inner
		display table-cell
		text-align center
		vertical-align middle
		
		h2
			font-family font-2
			font-size 6.5vh
			text-shadow 2px 2px 2px rgba(0,0,0, .5)
			
		p
			font-size 4vh
			text-shadow 2px 2px 2px rgba(0,0,0, .5)
			
	&__header
		z-index 1000
		position fixed
		top 0
		left 0
		right 0
		width 100%