.page
	padding-bottom 40px
	
	&__row
		padding-top 30px
		padding-left 10px
		padding-right 10px
		
		+above(small)
			padding-left 15px
			padding-right 15px
		
		+above(large)
			padding-top 80px
			padding-bottom 152px //padding-top + title height
			margin-top -152px
		
		&_1
			
			+above(large)
				margin-top 0
				background transparent url(images/bg-2.png) right center no-repeat
				background-size 30% auto
			
		&_2
			+above(large)
				background transparent url(images/bg-3.png) left center no-repeat
				background-size auto 100%
			
		&_3
			+above(large)
				background transparent url(images/bg-4.png) right 50px center no-repeat
				background-size auto
			
		&_4
			+above(large)
				background transparent url(images/bg-5.png) 50px center no-repeat
				background-size auto
		
	&__title
		margin-bottom .5em
		color brandDark
		font-size 2.4rem
		line-height 1.2em
		
		span
			font-size .7em
		
		+above(600px)
			font-size 3rem
		
		+above(large)
			font-size 3.5rem
		
		&_row-2
			+above(large)
				padding-right 15%