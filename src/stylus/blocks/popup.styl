.popup
	width 100%
	max-width 700px
	margin 0 auto
	color brandDark
	background light
	box-shadow 2px 2px 6px 0px rgba(0,0,0, .5)
	
	&__header
		background #e7e7e8
		
	&__body
		padding 25px 20px
		
		+below(tablet)
			padding 10px
		
	&__footer
		padding 20px
		padding-top 0
		font-size 2.2rem
		
		+below(tablet)
			padding 10px
			padding-top 0
			font-size 1.5rem
		
	&__footer-separator
		height 1px
		margin-bottom 20px
		background brandDark
		
		+below(tablet)
			margin-bottom 10px
		
	&__header-row
		display table
		width 100%
		table-layout fixed
		
	&__header-col
		display table-cell
		vertical-align middle
		
		&_1
			width 300px
			padding 20px 12px
			
			+below(tablet)
				padding 12px
				width 50%
				
			+below(small)
				width 70%
			
			span
				display inline-block
				font-size 2rem
				margin-left 2rem
				
				+below(tablet)
					font-size 1.5rem
					margin-left 1rem
					
					&:last-child
						margin-right 0
				
				&:last-child
					margin-right 0
				
				span
					font-size 2.5rem
					
					+below(tablet)
						font-size 2rem
			
		&_2
			width 50px
			padding 20px 0
			
			+below(tablet)
				display none
			
		&_3
			position relative
			width 350px
			padding 12px
			text-align left
			vertical-align top
			
			+below(tablet)
				width 50%
				
			+below(small)
				width 30%
			
	&__print-btn
		display inline-block
		vertical-align top
		width 50px
		border 1px solid brandDark
		
		&:hover,
		&:focus
			opacity .6
		
		img
			width 100%
			
	&__logo
		position absolute
		top 5px
		left 45px
		width 140px
		
		+below(tablet)
			width 80px
			
		+below(small)
			display none
		
	&__close-btn
		position static 
		display inline-block
		vertical-align top
		height 25px
		width 25px
		padding 0
		line-height 23px
		
		&:hover,
		&:focus
			opacity .6
		
		img
			width 100%
		
	&__body-row
		display table
		width 100%
		table-layout fixed
		
		+below(small)
			display block
		
	&__body-col
		display table-cell
		width 50%
		
		+below(small)
			display block
			width 100%
		
		&_1
			border-left 1px solid brandDark
			
			+below(small)
				margin-bottom 10px
				border 0
			
		&_2
			vertical-align bottom
			
	&__decorated-table
		width 100%
		table-layout fixed
		font-family font-3
		font-size 3rem
		
		+below(tablet)
			font-size 1.5rem
		
		td
			padding 10px
			
			&:first-child
				width 30%
				padding-left 20px
				text-align left
				
				+below(tablet)
					padding-left 10px
					text-align center
					
				+below(small)
					width 40px
					padding 5px 0
			
			&:nth-child(2)
				width 70%
				padding-right 20px
				
				+below(tablet)
					padding-right 0
		img
			height 46px
			width auto
			
			+below(tablet)
				height 25px
	
	&__price-wrap
		padding 20px
		margin-bottom 20px
		font-family font-3
		
		+below(tablet)
			padding 5px 10px
			margin-bottom 10px
		
	&__price-title
		font-size 3.4rem
		
		+below(tablet)
			font-size 1.5rem
		
	&__price
		font-size 5rem
		
		+below(tablet)
			font-size 3rem
		
		span
			font-size 3rem
			
			+below(tablet)
				font-size 1.5rem
			
	&__files-wrap
		clearfix()
		padding 5px 10px
		background #e7e7e8
		
		+below(tablet)
			padding 5px
		
	&__file-link
		display block
		float left
		width 33.3333%
		padding 5px
		color #595959
		text-align center
		text-decoration none
		
		&:hover,
		&:focus
			opacity .6
		
		img
			width 42px
			margin-bottom 10px
			
			+below(tablet)
				width 25px
				margin-bottom 5px
			
		span
			display block
			font-size 1.3rem
			single-line()
			