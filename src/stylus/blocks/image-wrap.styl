.image-wrap
	position relative
	padding-top 6px
	
	&__label
		z-index 2
		position absolute
		top 0
		right 30px
		width 350px
		padding 16px
		color light
		background #40ae49
		box-shadow 3px 2px 2px 0px rgba(0,0,0, .5)
		
		&:after
			position absolute
			top 0
			right -5px
			content ''
			display block
			width 0
			height 0
			border-style solid
			border-width 6px 0 0 5px
			border-color transparent transparent transparent brandDark
			
		p
			font-size 1.5rem
			line-height 1.1em
	
	&__body
		zindex 1
		position relative
		overflow hidden
	
	.bx-wrapper
		margin 0
		
	.bx-wrapper .bx-viewport
		box-shadow none
		border 0
		left 0
		background transparent
		
	.bx-wrapper .bx-controls-direction a
		height 126px
		width 126px
		margin-top -63px
		background rgba(0,0,0, .5)
		border-radius 50%
		
		&:hover,
		&:focus
			background rgba(0,0,0, .8)
		
	.bx-wrapper .bx-prev
		left auto
		right -63px
		
		&:after
			content ''
			position absolute
			top 0
			bottom 0
			left 36px
			margin auto
			display block
			width 0
			height 0
			border-style solid
			border-width 20px 0 20px 12px
			border-color transparent transparent transparent light
		
	.bx-wrapper .bx-next
		right auto
		left -63px
		
		&:after
			content ''
			position absolute
			top 0
			bottom 0
			right 36px
			margin auto
			display block
			width 0
			height 0
			border-style solid
			border-width 20px 12px 20px 0
			border-color transparent light transparent transparent
		
	&__slider
		
		> li
			
			> img 
				width 100%