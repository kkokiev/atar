.table 
	width 100%
	font-size 2rem
	text-align center
	
	thead
		color brand
		
		th
			padding 5px 10px
			background #23408f
			background linear-gradient(to bottom, #8292bf 0%,#324d97 54%,#23408f 100%)
			border 1px solid brandDark
			tr(.3s)
			
			&:hover
				opacity .8
			
			&:last-child
				color light
				background #ec008c
				background linear-gradient(to bottom, #f46fbe 0%,#ee1a98 54%,#ec008c 100%)
				border 1px solid #ec008c
				
				&:hover
					opacity 1
			
	tbody
		color brandDark
		
		td
			padding 5px 10px
			border 1px solid brandDark
			
			&:last-child
				position relative
				
			
	.table__separator
		
		td
			height 26px
			border none 
			
	&__popup-btn
		position absolute
		top 0
		left 0
		height 100%
		width 100%
		display block
		color light
		text-decoration none
		background #23408f
		background linear-gradient(to bottom, #8292bf 0%,#324d97 54%,#23408f 100%)
		
		&:hover,
		&:focus
			opacity .8
		
		span
			display inline-block
			vertical-align middle
			

	&__row-alert
		background #ec008c